@using ProjectGreenAI.ModelViews
@model CompleteProfileViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <div class="col">
            @foreach (var item in Model.profilelist)
            {
                <div class="card Page-input-card mb-4 shadow bg-warm_light">
                    <div class="card-body">

                        <h5 class="text-warm fs-5 fw-normal mb-4">
                            Hebu tumalize maelezo yako binafsi.
                        </h5>
                        <h3 class="fw-normal fs-5 text-warm" style="font-weight:500;">@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName) </h3>
                        <div class="mt-3">
                            <p class="card-text text-warm mb-1">Jinsia: @Html.DisplayFor(modelItem => item.Gender)</p>
                            <p class="card-text text-warm">Siku ya kuzaliwa: @Html.DisplayFor(modelItem => item.DateofBirth)</p>
                        </div>

                        <!--
    <div class="mt-3">
        <button class="btn btn-warm rounded-pill d-inline-block transform-87 me-12 mb-1" type="button" @*onclick="location.href='@Url.Action("Create", "Educations")'"*@><span class="fa fa-plus-circle"></span> My baby's profile</button>
    </div>-->

                        <div class="mt-3">
                            <a href="@Url.Action("Edit", "Profiles", new { id = item.Id })" class="btn btn-warm rounded-pill d-inline-block transform-87 me-12 mb-1">Edit details</a>
                        </div>

                        <div>
                            <button class="btn btn-warm rounded-pill mt-1 transform-87 me-12" type="button" onclick="location.href='@Url.Action("Consultations", "Home")'">Uliza Swali</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="row">
        <div class="col">
            <!-- Add another foreach statement here -->
        </div>
    </div>
</div>

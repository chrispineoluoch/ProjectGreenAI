@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="nav navbar-nav navbar-right me-auto mb-2 mb-lg-0">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-warm rounded-pill">
                    Toka
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="register-link nav-item">
            <a class="btn btn-warm rounded-pill" asp-area="Identity" asp-page="/Account/Register">Jisajili</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-warm rounded-pill" asp-area="Identity" asp-page="/Account/Login">Ingia</a>
        </li>
    }
</ul>

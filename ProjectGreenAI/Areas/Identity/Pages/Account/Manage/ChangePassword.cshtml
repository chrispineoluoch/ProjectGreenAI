@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="card Page-input-card mb-4 bg-white shadow rounded pe-2 ps-2">
    <div class="card-body">
        <h5 class="signin-card-title text-warm fs-2">
            Dhibiti Akaunti
        </h5>
        <h6><span class="badge bg-warm mt-2">Karibu mzazi.</span></h6>

        <div>
            <section>
                <form id="change-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="signin-textbox-group">
                            <input asp-for="Input.OldPassword" class="form-control signin-textboxes" autocomplete="username" placeholder="Nenosiri langu ni ..." aria-required="true" />
                            <span asp-validation-for="Input.OldPassword" class="text-danger signin-validation-text"></span>

                            <input asp-for="Input.NewPassword" class="form-control signin-textboxes" autocomplete="current-password" placeholder="Weka nenosiri lako upya ..." aria-required="true" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger signin-validation-text"></span>

                            <input asp-for="Input.ConfirmPassword" class="form-control signin-textboxes" autocomplete="current-password" placeholder="Weka nenosiri langu upya tena ..." aria-required="true" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger signin-validation-text"></span>
                        </div>

                        <div>
                            <button id="update-button" type="submit" class="btn btn-warm btn-lg rounded-pill Page-button-transform">Hifadhi</button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

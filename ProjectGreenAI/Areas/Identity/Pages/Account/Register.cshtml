@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card signup-card shadow bg-white rounded pe-2 ps-2">
    <div class="card-body signup-card-body">
        <h5 class="signup-card-title text-warm fs-2 fw-bold">
            Jisajili
        </h5>
        <h6><span class="badge bg-warm mt-2">Karibu mzazi.</span></h6>

        <div>
            <section id="registrationForm">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="signup-textbox-group">
                            <input asp-for="Input.Email" class="form-control signup-textboxes" autocomplete="username" placeholder="Barua pepe yangu ni ..." aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger signup-validation-text"></span>

                            <input asp-for="Input.Password" class="form-control signup-textboxes" autocomplete="new-password" placeholder="Nenosiri langu ni ..." aria-required="true" />
                            <span asp-validation-for="Input.Password" class="text-danger signup-validation-text"></span>

                            <input asp-for="Input.ConfirmPassword" class="form-control signup-textboxes" autocomplete="new-password" placeholder="Nenosiri langu ni ..." aria-required="true" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger signup-validation-text"></span>
                        </div>

                        <div class="forgot-password-div">
                            <a id="forgot-password" asp-page="./ForgotPassword" class="forgot-password-link">Umesahau nenosiri yako?</a>
                        </div>

                        <div>
                            <button id="registerSubmit" type="submit" class="btn btn-warm btn-lg signup-button">Jisajili</button>
                        </div>

                        <div class="or-separator mt-lg-2 mb-lg-2 snapple-seperator">
                            <span class="or-text">au</span>
                        </div>

                        <div class="pb-4">
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-warm btn-lg signin-button">Ingia</a>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
